
<!DOCTYPE html>
<html>
<head>
  <title>Test</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
 
<header>
  <nav class="navbar navbar-default">
  <div class="container-fluid">
	
	<% if user_signed_in? %>
	  <%= link_to tweets_path, class: "navbar-brand" do %>
        <h4>Main</h4>
      <% end %>
	  
	  <div class="navbar-header">
	    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      </div>
    
	  <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
       <ul class="nav navbar-nav">
	    <li>
	      <%#= link_to "Notifications", "#" %> 
		  <span class="sr-only">
		    (current)
		  </span>
	    </li>			
       </ul>
      
      <ul class="nav navbar-nav navbar-right">
		<li class="dropdown">
			<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
				<img alt="img" class="img-rounded" height="35" width="35" src="<%= current_user.image %>" />
				<span class="caret"></span>
				&nbsp
			</a>
   
			<ul class="dropdown-menu" role="menu">
				<li>
					<a href="/tweet_pages"><h4><strong><%= current_user.username %></strong></h4>
						<h6>View profile</h6>
					</a>
				</li>
				
				<li class="divider"></li>
				<li><%#= link_to "profile_update", edit_user_registration_path %></li>
				<li><%= link_to "LOGOUT", destroy_user_session_path, method: :delete %></li>
			</ul>
        </li>
      </ul>
      </div> 	
	<% else %>
	
	<a class="navbar-brand" href="/">
		<%= image_tag "twitter.png", size: "25x20" %>
	</a>
	<div class="navbar-header">
	  <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
    </div>

    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li class="active">
            <%#= link_to "Login", new_user_session_path %>		  
		    <span class="sr-only">(current)</span>
		</li>
        <li>
		  <%#= link_to "Sign up", new_user_registration_path %>
		</li>
      </ul>
    </div>
	<% end %>
	
	</div>
  </nav>
</header>

<% flash.each do |name, msg| %>
  <div class="alert alert-<%= name == "notice" ? "success" : "error" %>">
    <a class="close" data-dismiss="alert">Ã—</a>
    <%= msg %>
  </div>
<% end %>

<div class="row">
	<div class="container">

		<div class="col-md-12 content">
			<%= yield %>
		</div>
		
		<!-- <div class="col-md-3" sidebar_right >
			<%= yield :sidebar_right %>
		</div> -->
	</div>
</div>

</body>
</html>
