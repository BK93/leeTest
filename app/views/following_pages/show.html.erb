<%= stylesheet_link_tag "following_pages", :media => "all" %>

<div class="blue">
		<div class="pink">
			<img alt="img" class="image" height="180" width="180" src="<%= @user.image %>" />
		
			<h3><%= @user.username %></h3>
			@<%= @user.userId %>
		
			<div class="follow-page-follow-all">
			<h4>Who to follow</h4>
			
				<% @users.each do |user| %>
					<div class="row">
						<table>
							<tr class="tr">
								<td rowspan="2" class="col-md-1">
									<%= link_to image_tag( user.image, :size => "40x40", :class => "img-rounded" ), tweet_page_path(user.id) %>
								</td>
								<td>
									<strong><%= link_to user.username, tweet_page_path(user.id) %></strong> 
									
									<div class="follow-page-font">	
										@<%= user.userId%>
									</div>
								</td>
							</tr><p>
							<tr>
								<td>
									<% if Follow.new.able?(current_user, user) %>		
										<%= link_to 'UnFollow', tweet_follow_path(user.id, id: current_user.id), method: :delete, class: "btn btn-danger btn-sm", data: { confirm: "Are you sure?" } %>
									<% else %>
										<%= link_to 'Follow', tweet_follows_path(tweet_id: user.id), method: :post, class: "btn btn-info btn-sm" %>
									<% end %>
								</td>
							</tr>
						</table>
					</div>
				<% end %>
				
			</div>
		</div>
</div>


<div class="blue-bottom">
	<div class="blue-buttons">
		<div class="blue-button">
			<%= link_to "TWEETS", tweet_page_path %>
		
			<div class="blue-count">	
				<div class="count-font">
					<%= @tweets_count %>
				</div>	
			</div>
		</div>
		
		<div class="blue-button">
			<%= link_to "FOLLOWINGS", following_page_path %>
		
			<div class="blue-count">	
				<div class="count-font">
					<%= Follow.where(user_id: @user.id).count %>
				</div>
			</div>
		</div>		
		
		<div class="blue-button">		
			<%= link_to "FOLLOWERS", followers_page_path %>
		
			<div class="blue-count">
				<div class="count-font">
					<%= Follow.where(follow_id: @user.id).count %>
				</div>
			</div>
		</div>
	</div>
	
	<div class="follow_bt">
		<% if Follow.new.able?(current_user, @user) %>		
			<%= link_to 'UnFollow', tweet_follow_path(@user.id, id: current_user.id), method: :delete, class: "btn btn-danger", data: { confirm: "Are you sure?" } %>
		<% else %>
			<%= link_to 'Follow', tweet_follows_path(tweet_id: @user.id), method: :post, class: "btn btn-info" %>
		<% end %>
	</div>
</div>	

<div class="col-md-3">
</div>

<div class="col-md-8">
	<% Hash[@follow_users_hash].values.each do |user| %> 
		<div class="col-sm-4">
			<div class="row">
				<div class="follow-box-top">
					<img alt="img" class="follow-box-iamge" height="70" width="70" src="<%= user.image %>" >
				</div>	
				
				<div class="follow-box-bottom">
					<div class="follow-bt">
						<% if Follow.new.able?(current_user, user) %>		
							<%= link_to 'UnFollow', tweet_follow_path(user.id, id: current_user.id), method: :delete, class: "btn btn-danger btn-sm", data: { confirm: "Are you sure?" } %>
						<% else %>
							<%= link_to 'Follow', tweet_follows_path(tweet_id: user.id), method: :post, class: "btn btn-info btn-sm" %>
						<% end %>
					</div>
					<h4>
						<strong><%= user.username %></strong>
					</h4>
					<h6>@<%= user.userId %></h6>
				</div>
				
			</div>
		</div>
	<% end %>
</div>
