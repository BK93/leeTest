
<div id="welcome">
<h1>retweet?</h1>

<label>content: </label>
<table class="table table-striped table-hover ">
  <tr class="info">
      <td><%= @retweet_find.content %></td>
  </tr>
</table>

<%= form_for(@retweet, url: tweet_retweets_path) do |f| %>
	
	<div class="form-group">
	  <label>comment: </label>
	  <input class="form-control input-lg" type=<%= f.text_field :comment %>
	</div>
	
	<%= f.hidden_field :tweet_id, :value => params[:tweet_id] %>
	<%= f.hidden_field :tweet_user_id, :value => @retweet_find.user_id %>
	<%= f.hidden_field :content, :value => @retweet_find.content %>
	<%= f.hidden_field :image, :value => current_user.image %>

	<input class="btn btn-info" type="submit" value="retweet !">

	<%= link_to tweet_path(params[:tweet_id]), class: "btn btn-default" do %>
		Back
	<% end %>
<% end %>

</div>
 