<div class="row">
<div class="container">

<div class="col-md-3" >	
	<div class="profile-header"> 
	<div class="row">
	</div>
	  <div class="col-sm-9">
		<div class="row">
		  <div class="col-xs-8 col-sm-5">
			<img class="modal-img-rounded" alt="img" height="80" width="80" src="<%= current_user.image %>">
		  </div>
		  
		  <div class="col-xs-4 col-sm-7">
			<div class="username">
				<h4><%= current_user.username %></h4>
				<h6>@<%= current_user.userId %></h6>
			</div>	
		  </div>
		  
		</div>
	  </div>
	</div>
	<div class="modal-footer"></div>
</div>


<div class="col-md-6" >	
	<div class="profile-all">
		<div class="header">
			<h3>Account</h3>
			<h6>Change your basic account and language settings.</h6>
		</div>
	
		<div class="body">
			<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:method => :put, :multipart => true}) do |f| %>
				<%= devise_error_messages! %>

				<div class="text">
					<div class="text-left">
						<%= f.label :username %>
					</div>
					
					<div class="text-right">
						<%= f.text_field :username %>
					</div>
				</div>
				
				<div class="text">
					<div class="text-left">
						<%= f.label :email %>	
					</div>
					<div class="text-right">
						<%= f.email_field :email, autofocus: true %>
					</div>
				</div>
					
				<% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
					<div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
				<% end %>

				<div class="text">
					<div class="text-left">
						<%= f.label :password %>
					</div>
					<div class="text-right">
						<%= f.password_field :password, autocomplete: "off" %>
					</div>
					<i>(leave blank if you don't want to change it)</i>
				</div>

				<div class="text">
					<div class="text-left">
						<%= f.label :password_confirmation %>
					</div>
					<div class="text-right">
						<%= f.password_field :password_confirmation, autocomplete: "off" %>
					</div>
				</div>


				<div class="text">
					<div class="text-left">
						<%= f.label :image %>
					</div>
					<div class="text-right">
						<div class="text-image">
							<%= f.file_field :image %>
						</div>
						<%= image_tag(current_user.image.url, :size => "200x200") %> 
					</div>
				</div>
							
				
				<div class="text">
					<div class="text-left">
						<%= f.label :current_password %>
					</div>
					<div class="text-right">
						<%= f.password_field :current_password, autocomplete: "off" %>
					</div>
					<br>
					 <i>(we need your current password to confirm your changes)</i>
				</div>
				<br>
				
				<div class="actions">
					<%= f.submit "Update", :class => "btn btn-info"%>
				</div>
			<% end %>
		</div>
		
		<div class="footer">
			<h3>Cancel my account</h3>
			<%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, :class => "btn btn-default btn-sm" %>
		</div>
		
	</div>

</div>
</div>
