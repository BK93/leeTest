<%= stylesheet_link_tag "test2", :media => "all" %>
<div class="bd">

<div class="col-md-6">
	<div class="font">
		<h1>Welcome to Twitter.</h1>
		<h3>
			Connect with your friends â€” and other fascinating people. <br>
			Get in-the-moment updates on the things that interest you.<br> 
			And watch events unfold, in real time, from every angle.<br>
		<h3>
	</div>
</div>

<div class="col-md-1">
</div>

<div class="col-md-3">
	<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
		<br><br>
		<div class="form-group">
			<%= f.text_field :email, class: "form-control",autofocus: true, :placeholder => 'Email' %>
		</div>

		<table>
			<div class="form-group">
				<tr>
					<td width="50%">
						<%= f.password_field :password, class: "form-control", autocomplete: "off", :placeholder => 'Password' %>
					</td>
					<td width="20%">
						&nbsp&nbsp
						<input class="btn btn-primary" type="submit" value="Log in">	
					</td>
				</tr>
			</div>
		</table>
		
		<% if devise_mapping.rememberable? -%>
			<div class="field">
			  <%= f.check_box :remember_me %>
			  <%= f.label :remember_me %>
			</div>
		<% end -%>
		
		<br>
	<% end %>
	<%#= render "devise/shared/links" %>

<h4>New to Twitter? Sign up</h4>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:multipart => true}) do |f| %>
	<%= devise_error_messages! %>
  
	<div class="form-group">
		<%= f.text_field :userId, class: "form-control",autofocus: true, :placeholder => 'ID' %>
	</div>
  
	<div class="form-group">
		<%= f.text_field :username, class: "form-control",autofocus: true, :placeholder => 'Full name' %>
	</div>
	
	<div class="form-group">
		<%= f.text_field :email, class: "form-control",autofocus: true, :placeholder => 'Email' %>
	</div>

	<div class="form-group">
		<% if @validatable %>
			<em>(<%= @minimum_password_length %> characters minimum)</em>
		<% end %>
		<%= f.password_field :password, class: "form-control", autocomplete: "off", :placeholder => 'Password' %>
	</div>

	<div class="form-group">
		<%= f.password_field :password_confirmation, class: "form-control", autocomplete: "off", :placeholder => 'Password confirmation' %>
	</div>
	
	<div>
		<%= f.label :image do %>
			<%= f.file_field :image %>
			<%= f.hidden_field :image_cache %>
		<% end %>
	</div>
	<p class="text-right"><input class="btn btn-warning btn-sm" type="submit" value="Sign up"></p>
	<br><br>
<% end %>
</div>

</div>