<%= stylesheet_link_tag "comments", :media => "all" %>

<div class="container">
	<div class="margin">
		<h1>Reply</h1>

		<label>content: </label>
		<table class="table table-striped table-hover ">
		  <tr>
			  <td><%= @retweet_find.content %></td>
		  </tr>
		</table>

		<%= form_for(@comment, url: tweet_comments_path) do |f| %>
			
			<div class="form-group">
			  <label>Reply: </label>
			  <input class="form-control input-lg" type=<%= f.text_field :comment %>
			</div>
			
			<%= f.hidden_field :tweet_id, :value => params[:tweet_id] %>
			<%= f.hidden_field :username, :value => current_user.username %>
			<%= f.hidden_field :userId, :value => current_user.userId %>
			<%= f.hidden_field :image, :value => current_user.image %>
			<%= f.hidden_field :user_id, :value => current_user.id %>

			<input class="btn btn-info" type="submit" value="reply">

			<%= link_to tweets_path, class: "btn btn-default" do %>
				Back
			<% end %>
		<% end %>
	</div>
</div>